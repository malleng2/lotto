        <div class="numbers" id="numberContainer"></div>
        <button id="generateBtn">새 번호 추출하기</button>
    </div>
    
    <div class="ad-container">
        <ins class="kakao_ad_area" style="display:none;"
            data-ad-unit="DAN-dH2JfZg4FMJyQ2B3"
